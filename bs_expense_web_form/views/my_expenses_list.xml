<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="my_expenses" name="My Expenses">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Expenses</t>
            </t>
            <div id="wrap" class="oe_structure">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <t t-if="expenses" t-call="portal.portal_table">
                                <thead>
                                    <tr class="active">
                                        <th>Expense Date</th>
                                        <th>Description</th>
                                        <th class='d-none d-md-table-cell'>Employee</th>
                                        <th>Total Amount</th>
                                        <th class="text-right">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="expenses" t-as="expense">
                                        <tr>
                                            <td>
                                                <span t-field="expense.date"/>
                                            </td>
                                            <td>
                                                <span t-field="expense.name"/>
                                            </td>
                                            <td>
                                                <span t-field="expense.employee_id"/>
                                            </td>
                                            <td>
                                                <span t-field="expense.total_amount_company"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="expense.state"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </t>
                            <t t-else="">
                                <p class='o_view_nocontent_smiling_face'>You have no Expenses Yet !!</p>
                            </t>
                        </div>
                    </div>

                </div>
                <br/>
            </div>
        </t>
    </template>
</odoo>