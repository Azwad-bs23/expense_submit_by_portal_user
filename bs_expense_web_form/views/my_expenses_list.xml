<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="my_expenses" name="My Expenses">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001"
                         data-snippet="s_title" data-scroll-background-ratio="1">
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <h1>My Expenses</h1>
                    </div>
                </section>
            </div>
            <br/>
            <div class="container">
                <t t-if="expenses" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Expense Date</th>
                            <th>Description</th>
                            <th class='d-none d-md-table-cell'>Employee</th>
                            <th class="text-center">Total Amount</th>
                            <th class="text-right">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="expenses" t-as="expense">
                            <tr>
                                <td>
                                    <span t-field="expense.date"/>
                                </td>
                                <td>
                                    <span t-field="expense.name"/>
                                </td>
                                <td>
                                    <span t-field="expense.employee_id"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="expense.total_amount_company"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="expense.state"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
                <t t-else="">
                     <p class='o_view_nocontent_smiling_face'>You have no Expenses Yet !!</p>
                </t>
            </div>
            <br/>
        </t>
    </template>
</odoo>