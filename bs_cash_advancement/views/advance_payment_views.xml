<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="advance_payment_view_form" model="ir.ui.view">
        <field name="name">advance.payment.tree</field>
        <field name="model">advance.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="request_to_advance_payment" class="oe_highlight" string="Make Request" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="approve_to_advance_payment" class="oe_highlight" string="Approve" type="object"
                            attrs="{'invisible': [('state', '!=', 'requested')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Advance Payment of .."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', 'in', ['requested', 'approved'])]}"/>
                            <field name="partner_id" />
                            <field name="advance_payment_config_id" attrs="{'readonly': [('state', 'in', ['requested', 'approved'])]}"/>
                            <field name="payment_id" attrs="{'readonly': [('state', 'in', ['requested', 'approved'])]}"/>
                        </group>
                        <group>
                            <field name="currency_id" attrs="{'readonly': [('state', 'in', ['requested', 'approved'])]}"/>
                            <field name="requested_amount"/>
                            <field name="approved_amount" attrs="{'readonly': [('state', 'in', ['approved'])]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="advance_payment_view_tree" model="ir.ui.view">
        <field name="name">advance.payment.tree</field>
        <field name="model">advance.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="partner_id"/>
                <field name="currency_id"/>
                <field name="advance_payment_config_id"/>
                <field name="requested_amount"/>
                <field name="approved_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="advance_payment_action" model="ir.actions.act_window">
        <field name="name">Advance Payment</field>
        <field name="res_model">advance.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="advance_payment_menu"
              name="Advance Payment"
              sequence="90"
              parent="hr_expense.menu_hr_expense_root"
    />

    <menuitem id="advance_payment_submenu"
              name="Advance Payment"
              sequence="5"
              parent="advance_payment_menu"
              action="advance_payment_action"/>
</odoo>