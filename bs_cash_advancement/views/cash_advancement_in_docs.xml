<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  My Advancement Menu in My documents Page  -->
    <template id="portal_my_home_cash_advancement" name="Show Cash Advancement" inherit_id="portal.portal_my_home" customize_show="True" priority="32">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Cash Advancement</t>
                <t t-set="url" t-value="'/my_cash_advancement'"/>
                <t t-set="placeholder_count" t-value="'cash_advancement_count'"/>
            </t>
        </xpath>
    </template>
    <!-- My Advancement Breadcrumbs in My Expense page  -->
    <template id="portal_cash_advancement_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'cash_advancement'" class="breadcrumb-item">My Cash Advancement</li>
        </xpath>
    </template>
</odoo>
