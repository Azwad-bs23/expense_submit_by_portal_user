<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="advance_payment_request">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001"
                         data-snippet="s_title" data-scroll-background-ratio="1">
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <h1>Advance Payment Request</h1>
                    </div>
                </section>

                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form action="/cash_advancement/submit" method="post" enctype="multipart/form-data"
                              class="o_mark_required" data-mark="*" data-model_name="" data-success-page="">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">

                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="product">
                                            <span class="s_website_form_label_content">Currency</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="currency_id" t-attf-class="form-control s_website_form_input"
                                                    required="1">
                                                <t t-foreach="currency or []" t-as="currency">
                                                    <option t-att-value="currency.id">
                                                        <t t-esc="currency.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="product">
                                            <span class="s_website_form_label_content">Payment Type</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="payment_id" t-attf-class="form-control s_website_form_input"
                                                    required="1">
                                                <t t-foreach="payments or []" t-as="payment">
                                                    <option t-att-value="payment.id">
                                                        <t t-esc="payment.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="total_expense">
                                            <span class="s_website_form_label_content">Requested Amount</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="requested_amount" type="number"
                                                   class="form-control s_website_form_input" name="requested_amount"
                                                   required="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
