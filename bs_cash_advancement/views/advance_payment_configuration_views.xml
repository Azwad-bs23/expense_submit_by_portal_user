<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="advance_payment_configuration_view_form" model="ir.ui.view">
        <field name="name">advance.payment.configuration.tree</field>
        <field name="model">advance.payment.configuration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="approve_configuration" class="oe_highlight" string="Confirm" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Advance Payment of .."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="credit_account"/>
                            <field name="debit_account"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="advance_payment_configuration_view_tree" model="ir.ui.view">
        <field name="name">advance.payment.configuration.tree</field>
        <field name="model">advance.payment.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="journal_id"/>
                <field name="credit_account"/>
                <field name="debit_account"/>
            </tree>
        </field>
    </record>

    <record id="advance_payment_configuration_action" model="ir.actions.act_window">
        <field name="name">Advance Payment Configuration</field>
        <field name="res_model">advance.payment.configuration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="advance_payment_configuration_submenu"
              name="Configuration"
              sequence="100"
              parent="advance_payment_menu"
              action="advance_payment_configuration_action"/>
</odoo>